{
  "name": "dora-agent",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "node-hid": "^2.1.2",
    "ps-tree": "^1.2.0",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1",
    "usb-detection": "^4.14.2"
  },
  "optionalDependencies": {
    "raspi": "^6.0.1",
    "raspi-gpio": "^6.2.2",
    "raspi-soft-pwm": "^6.0.2",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:gamepad": "ROBOT_USB_GAMEPADS='054C:09CC,0079:0011' ts-node src/index.ts",
    "build": "tsc --project tsconfig.build.json && tsc-alias --verbose -p tsconfig.build.json",
    "build:all": "rm -rf ./build && tsc --project tsconfig.build.json && tsc-alias --verbose -p tsconfig.build.json",
    "servo": "node build/src/index.js",
    "servo:sudo": "sudo bash -c \"ROBOT_USB_GAMEPADS='054C:09CC,0079:0011' node build/src/index.js\"",
    "servo:aquest": "sudo bash -c \"ROBOT_VOICE_MODE=aquest node build/src/index.js\"",
    "clean": "rm -rf ./build",
    "ts-node": "ts-node -r tsconfig-paths/register $1",
    "gamepad": "ts-node src/gamepad.ts '054C:09CC,0079:0011'",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^~/(.+)": "<rootDir>/src/$1"
    },
    "preset": "ts-jest"
  },
  "keywords": [],
  "author": "",
  "license": "MIT"
}
